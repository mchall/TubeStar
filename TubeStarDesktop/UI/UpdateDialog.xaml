<Window x:Class="TubeStar.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:TubeStar" 
        WindowStartupLocation="CenterScreen"
        Title="Update Available"
        Height="650" Width="700">

    <Grid x:Name="LayoutRoot">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="White" BorderBrush="#A5BFE1" BorderThickness="0,0.5,0,0.5" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    
                    <Image Source="../Resources/update2016.jpg" />

                    <Button x:Name="btnDownload" Grid.Row="1" MinWidth="80" Width="Auto" Height="40" Content="Get TubeStar on Google Play" FontSize="22" Margin="3,3,3,3" Click="DownloadButton_Click"/>

                    <Button x:Name="btnOk" Grid.Row="2" HorizontalAlignment="Right" IsDefault="True" MinWidth="80" Width="Auto" Height="30" Content="OK" Margin="3,3,3,3" Click="OKButton_Click"/>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
